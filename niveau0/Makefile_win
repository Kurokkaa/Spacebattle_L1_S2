CFLAGS =  -O3 -Dmain=SDL_main
LDFLAGS = -lm  -lSDL2main -lmingw32 -lSDL2 
SDL2_INCLUDE_DIR = "C:\SDL2-2.0.18\x86_64-w64-mingw32\include\SDL2"
SDL2_LIBRARIES_DIR = "C:\SDL2-2.0.18\x86_64-w64-mingw32\lib"
INC = sdl2-light.h
SRC = main.c sdl2-light.c
OBJ = $(SRC:%.c=%.o)

PROG = spacebattle.exe

%.o: %.c $(INC)
	gcc $(CFLAGS) -c $<  -I $(SDL2_INCLUDE_DIR)

$(PROG): $(OBJ)
	gcc $(CFLAGS) $(OBJ) $(LDFLAGS) -o $@ -L $(SDL2_LIBRARIES_DIR) -un

doc: $(PROG)
	doxygen $(PROG)

.PHONY: clean
clean:
	del /f /q *.o *~ $(PROG)
	rd /s /q latex html

CFLAGS =  -O3 -Dmain=SDL_main
LDFLAGS = -lm -lmingw32 -lSDL2main -lSDL2
SDL2_INCLUDE_DIR = "..\..\..\SDL2-2.0.20\x86_64-w64-mingw32\include"
SDL2_LIBRARIES_DIR = "..\..\..\SDL2-2.0.20\x86_64-w64-mingw32\lib"
INC = sdl2\sdlsdl2-light.h SDL_data\SDL_data.h SDL_graphics\SDL_graphics.h constantes\constantes.h
SRC = main.c sdl2\sdl2-light.c SDL_data\SDL_data.c SDL_graphics\SDL_graphics.c  
OBJ = $(SRC:%.c=%.o)
PROG = spacebattle.exe

%.o: %.c $(INC)
	gcc $(CFLAGS) -c $<  -I $(SDL2_INCLUDE_DIR)

$(PROG): $(OBJ)
	gcc $(CFLAGS) $(OBJ) $(LDFLAGS) -o $@ -L $(SDL2_LIBRARIES_DIR)

doc: $(PROG)
	doxygen $(PROG)

 

.PHONY: clean
clean:
	del /f /q *.o *~ $(PROG)
	rd /s /q latex html
